# Imports
#:import utils kivy.utils
<PrimaryView>:
    canvas:
        Color: 
            rgba: 1, 1, 1, 1
        Rectangle: 
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    ScreenManager:
        id: scm
        Screen:
            id: liveecho
            name: 'liveecho'
            ScrollView:
                bar_width: 0
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: '18sp'
                    padding:25,20,20,0
                    Widget:
                        size_hint_y: None
                        height: '5sp'
                    Label:
                        size_hint_y: None
                        height: '50sp'
                        max_lines:1
                        text: 'Tiktok Live Echo'
                        color: 0, 0, 0, .8
                        valign: 'middle'
                        halign: 'left'
                        text_size: self.size
                        font_size: '28sp'
                        bold: True
                    LivechoL:
                    Livecholikewav:
                    Livechofollowwav:
                    Livechosharewav:
                    Label:
                        text: 'When Send Gift'
                        size_hint_y: None
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        padding_x: '15sp'
                        height: '28sp'
                        color: 0, 0, 0, .8
                        font_size: '18sp'
                        bold: True
                    LivechoRosewav:
                    LivechoPandawav:
                    Livecholovewav:
                    LivechoBeatwav: 
                    LivechoGentlemanwav:
                    LivechoWelcomewav:
                    LivechoLaughwav:
                    LivechoEmotionalDamagewav:
                    

                    # Livechonopewav:
                    Label:
                        text: 'When Comment Include'
                        size_hint_y: None
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        padding_x: '15sp'
                        height: '28sp'
                        color: 0, 0, 0, .8
                        font_size: '18sp'
                        bold: True
                    Livechocomment1wav:
                    Livechocomment2wav:
                    Livechocomment3wav:
                    Widget:
                        size_hint_y: None
                        height: '50sp'

        Screen:
            name: 'livelogs'
            id: livelogs
            GridLayout:
                cols: 1
                padding: dp(16)
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint: 1,None
                    height: dp(54)
                    MDRaisedButton:
                        padding: dp(16)
                        text: 'Refresh'
                        on_release:
                            app.load_logs()
                ScrollView:
                    GridLayout:
                        id:information_box
                        title: 'Logs'
                        cols: 1
                        size_hint: 1.,None    
                        height: self.minimum_height                  
                        
                        MDLabel:
                            size_hint: 1.,None 
                            height: self.texture_size[1]
                            theme_text_color: 'Primary'
                            text: self.parent.title
                            padding: 0,dp(4)
                        MDLabel:
                            size_hint: 1.,None 
                            height: self.texture_size[1]
                            id: logs_content
                            theme_text_color: 'Primary'
                            markup: True
                            text: 'test [color=ff3333]Hello[/color]'   
                            padding: 0,dp(4) 
        



    
        Screen:
            id: settings
            name: 'settings'
            ScrollView:
                bar_width: 0
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: '18sp'
                    padding:25,20,20,0
                    Widget:
                        size_hint_y: None
                        height: '5sp'
                    Label:
                        size_hint_y: None
                        max_lines:1
                        height: '50sp'
                        text: 'Settings'
                        bold: True
                        color: 0, 0, 0, .8
                        font_size: '28sp'
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        bold: True


                    Label:
                        text_size: self.size
                        valign: 'middle'
                        halign: 'left'
                        text: 'Input user’s Username(unique id) and press "CONNECT" Button, then app can echo events such as comments and gifts in real-time from TikTok’s LIVE'
                        color: 0, 0, 0, .8
                        font_size: '12sp'
                        size_hint_y: None
                        height: '80sp'

                        padding_x: '15sp'
 
                    LivechoU:
                    LivechoS:
                    LivechoV:
                    Widget:
                        # Widget:
                        #     size_hint_y: None
                        #     height: '200sp'
    
            
 
  
    BoxLayout:
        spacing: '15sp'
        size_hint_x: None
        padding: 0, 15, 0, 0
        width: '50sp'
        orientation: 'vertical'
        canvas:
            Color:
                rgba: utils.get_color_from_hex('#FFF9D7ff')
            Rectangle:
                pos: self.pos
                size: self.size
        Widget:
            size_hint_y: None
            height: '50sp'

        Widget:
        # GotoButton:
        #     state: "down" if scm.current == 'livelogs' else 'normal'
        #     background_normal: 'image/btn1_normal.png'
        #     background_down: 'image/btn1_down.png'
        #     on_press: 
        #         scm.current = 'livelogs'
        #         scm.transition.direction = 'down'
        GotoButton:
            state: "down" if scm.current == 'liveecho' else 'normal'
            background_normal: 'image/btn2_normal.png'
            background_down: 'image/btn2_down.png'
            on_press: 
                scm.current = 'liveecho'
                scm.transition.direction = 'up'
        GotoButton:
            state: "down" if scm.current == 'settings' else 'normal'
            background_normal: 'image/btn3_normal.png'
            background_down: 'image/btn3_down.png'
            on_press: 
                scm.current = 'settings'
                scm.transition.direction = 'up'
        Widget:
    BoxLayout:
        size_hint_x: None
        width: '10sp'
        canvas:
            Color:
                rgba: utils.get_color_from_hex('#FFF9D7ff')
            Rectangle:
                pos: self.pos
                size: self.size
# Dynamic widgets
<GotoButton@ToggleButton>:
    border: 0, 0, 0, 0
    size_hint_y: None
    height:'50sp'


<Content>:
    orientation:"horizontal"
    spacing:50  
    size_hint_y: None
    height:dp(50)
    MDSpinner:
        id:spinner
        size_hint:None,None
        size:dp(46),dp(46)
        pos_hint:{'center_x':0.1,'top':1.3}
        active:True
    MDLabel:
        text:'Connecting Live Room...'
        pos_hint:{'center_x':1.8,'top':1.3}


<Contentopen>:
    orientation:"horizontal"
    spacing:50  
    size_hint_y: None
    height:dp(50)
    MDSpinner:
        id:spinner
        size_hint:None,None
        size:dp(46),dp(46)
        pos_hint:{'center_x':0.1,'top':1.3}
        active:True
    MDLabel:
        text:'Open Dir...'
        pos_hint:{'center_x':1.8,'top':1.3}

<Options@Button>: 
    border: 0, 0, 0, 0
    size_hint: None, None
    height: '25sp'
    width: '25sp'

<LivechoL>:
    canvas: 
        Color:
            rgba: utils.get_color_from_hex('#FFF9D7ff')
        Rectangle: 
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: '40sp'
    orientation: 'horizontal'
    spacing:25
    MDTextField:   
        id:liveid 
        # required: True
        # halign: 'left'
        # valign: 'middle'
        size_hint_x:.55
        # pos_hint: {"x":0, "y":0.63}
        text_size: self.size
        color: 0, 0, 0, .8
        hint_text: "The Username Of Tiktok Live"
        pos_hint: {'center_y':0.5, 'center_x':0.7}

        # padding: dp(12)
        #padding_x: '500sp' 
        # background_normal: ''

    Button:
        id: ButttX
        text: "Paste"
        border: 0, 0, 0, 0
        size_hint_x: .2
        background_normal: 'image/requ1.png'
        background_down: 'image/requ2.png'
        font_size: '12sp'
        pos_hint: {'center_y':0.5, 'center_x':0.75}
        bold: True
        on_press:
            app.root.paste(liveid)
    Button:
        id: Buttt
        text: 'Connect'
        border: 0, 0, 0, 0
        size_hint_x: .25
        background_normal: 'image/requ1.png'
        background_down: 'image/requ2.png'
        font_size: '15sp'
        pos_hint: {'center_y':0.5, 'center_x':0.75}
        bold: True
        on_press:
            app.root.CONNECTpaste(liveid)




